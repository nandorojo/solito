{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.2",
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "cd apps/expo && npx expo start",
    "android": "cd apps/expo && npx expo run:android",
    "ios": "cd apps/expo && npx expo run:ios",
    "web": "cd apps/next && yarn next"
  },
  "resolutions": {
    "metro": "~0.76.7",
    "metro-resolver": "~0.76.7"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@3.4.1"
}
